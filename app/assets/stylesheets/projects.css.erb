.sub_page {
	justify-content: center;
	text-align: center;
}

.sub_title {
	border-left: 5px solid white;
	border-right: 5px solid white;
	border-bottom-left-radius: 10% 10%;
	border-bottom-right-radius: 10% 10%;
	border-top-left-radius: 10% 10%;
	border-top-right-radius: 10% 10%;
	padding: 20px;
}

.project_img {
  width: 80%;
  max-width: 1920px;
  height: 100%;
  max-height: 852px;
  border-radius: 10px;
  box-shadow: 0 3px 5px rgba(0,0,0,0.2);
  background-color: black;
  position: absolute;
	z-index: -1 !important;
}

.project_desc {
  display: flex;
  justify-content: center;
  align-items: center;
}

.pro_left {
  justify-content: flex-start;
}

.pro_right {
  justify-content: flex-end;
}

.project_text {
  background-color: white;
  color: black;
  width: 700px;
  height: fit-content;
	min-height: 250px;
  padding: 15px;
  border-radius: 10px;
  box-shadow: 0 3px 5px rgba(0,0,0,0.2);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.section {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: auto;
}
